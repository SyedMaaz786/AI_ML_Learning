import json



#load the data
def load_data(filename):
    with open(filename, "r")as f:
        data = json.load(f)
    return data


data = load_data("store_data.json")
print(data)


#clean & structure the data
def clean_data(data):
    text_to_num = {"one": 1, "two": 2, "three": 3, "four": 4, "five":5}
    cleaned_data = []
    unique_users = set()
    
    for user in data:
        #clean rating
        raw_rating = str(user["rating"]).strip()
        if(raw_rating) in text_to_num:
            raw_rating = text_to_num[raw_rating]
        user["rating"] = raw_rating
        
        #Handle missing value
        raw_age = user.get("age")
        if raw_age is None:
            user["age"]  = None
    
        #Deduplication
        if(user["name"].strip() in unique_users):
            continue

        unique_users.add(user["name"])
        cleaned_data.append(user)

    return cleaned_data 

        
        


data = clean_data(data)
print(data)


#Get meaningful insights from data
def get_insights(data):

    #avg rating
    tot_rating = 0
    for user in data:
        tot_rating += float(user["rating"])

    print(f"avg rating = {tot_rating/len(data)}")

    #percentage of users with poor rating
    poor_rating = 0
    for user in data:
        if(float(user["rating"]) < 3):
            poor_rating +=1
    print(f"% of user with poor rating = {poor_rating/len(data)*100}%")


    


         


get_insights(data)


#Recommendation feature
def get_recommendation(data):
    recommendations = []
    for user in data:
        curr_recomm = {}
        curr_recomm["name"]=user["name"]
        
        if(float(user["rating"]) >= 4):
            curr_recomm["brand"] = "Apple"
        else:
            curr_recomm["brand"] = "Samsung"

        recommendations.append(curr_recomm)
    return recommendations


            






